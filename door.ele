module Door

open Lock

sig Door{
   var lockState: LockState
}{
}

//actions
pred unlockCommanded[d: Door]{
    d.lockState' = Unlocked
}

pred lockCommanded[d: Door]{
    d.lockState' = Locked
}

pred unchanged[d: Door]{
    d.lockState' = d.lockState
}

//observations
pred locked[d: Door]{
    d.lockState = Locked
}

pred unlocked[d: Door]{
    d.lockState = Unlocked
}

